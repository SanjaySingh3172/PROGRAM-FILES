<script>
  $(document).ready(function(){
    $(".overlaydiv, .closeimage > img").click(function(){
      $(".overlaydiv, .popupdiv").fadeOut();
    })
    $(".product-page--submit-action a.refund-policy").click(function(e){
      e.preventDefault();
      $(".overlaydiv, .popupdiv").fadeIn();
    })
  })
</script>