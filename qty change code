jQuery(function(){
  var j = jQuery; //Just a variable for using jQuery without conflicts
  var addInput = '.quantity'; //This is the id/class of the input you are changing
  var n = 1; //n is equal to 1
  
  //Set default value to n (n = 1)
  j(addInput).val(n);

  //On click add 1 to n
  j('.purchase-details__quantity.product-quantity-box span.ss-icon.product-plus.js-change-quantity, .qty-wrapper .ss-icon.product-plus.js-change-quantity').on('click', function(){
    j(addInput).val(++n);
  })

  j('.purchase-details__quantity.product-quantity-box span.ss-icon.product-minus.js-change-quantity, .qty-wrapper .ss-icon.product-minus.js-change-quantity').on('click', function(){
    //If n is bigger or equal to 1 subtract 1 from n
    if (n >= 1) {
      j(addInput).val(--n);
    } else {
      //Otherwise do nothing
    }
  });
});  