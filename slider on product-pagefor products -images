<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<script>
  $(".product-thumb").slick({
    dots: false,
    infinite: false,
    arrows: true,
    prevArrow:"<span class='icon1 icon-left'></span>",
    nextArrow:"<span class='icon1 icon-right'></span>",
    draggable:false,
    speed: 300,
    slidesToShow: 5,
    slidesToScroll: 1,
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1,
          infinite: false,
          dots: false
        }
      },
      {
        breakpoint: 600,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 2
        }
      }
      // You can unslick at a given breakpoint now by adding:
      // settings: "unslick"
      // instead of a settings object
    ]
  });


  $(".product-item").on("click",function(){
    var img = $(this).find("img").attr("src");
    $(".main-image").find("img").attr("src",img);

  });
</script>
